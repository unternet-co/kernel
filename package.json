{
  "name": "@unternet/kernel-workspace",
  "version": "0.6.0",
  "private": true,
  "description": "The cognitive engine for intelligent applications.",
  "type": "module",
  "workspaces": [
    "packages/*",
    "cli"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "node scripts/build-packages.js",
    "cli": "npm run build && cd cli && npm run dev",
    "release": "npm run build && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unternet-co/kernel.git"
  },
  "author": "Rupert Manfredi <rupert@unternet.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unternet-co/kernel/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/unternet-co/kernel#readme",
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^24.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-node": "^3.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
